<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Multiple Distributor Tabs -->
    <record id="view_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group//group[2]//field[@name='website']" position="before">
                <field name="email_cc"/>
                <field name="email_bcc"/>
            </xpath>
            <xpath expr="//h1" position="after">
                <h3 attrs="{'invisible': [('parent_id', '!=', False)]}">
                    <field name="sequence_name" readonly="1" attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                </h3>
            </xpath>
            <xpath expr="//notebook//page[3]" position="after">
                <page name="vendor_stock" string="Vendor Stock">
                    <field name="vendor_stock_master_line" readonly="1">
                        <tree>
                            <field name="res_partner_id" invisible="1"/>
                            <field name="location_id" />
                            <field name="product_id" />
                            <field name="case_qty" />
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page name="manufacturer" string="Manufacturer Info">
                    <group>
                        <group>
                            <field name="dropship_selection" widget="radio" options="{'horizontal': true}"/>
                            <field name="dropship_fee"/>
                            <field name="order_min"/>
                            <field name="below_min_fee"/>
                        </group>
                        <group>
                            <field name="free_freight_level"/>
                            <field name="ships_from"/>
                            <field name="ship_cutoff_time"/>
                            <field name="note" string="Notes"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']//group[@name='purchase']" position="inside">
                <field name="purchase_delivery_carrier_id" string="Shipping Method"/>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_filter_search_inherit" model="ir.ui.view">
        <field name="name">res.partner.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="sequence_name" string="Unique No."
                filter_domain="[('sequence_name', 'ilike', self)]"/>
                <group expand="0" string="Group By">
                        <filter name="groupby_in_sequence_name" string="Unique Customer" domain="[]" context="{'group_by' : 'sequence_name'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>