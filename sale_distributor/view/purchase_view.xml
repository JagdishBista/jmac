<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_split" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.split</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='partner_id']" position="after">
        	
				<label for="vendor_address_id" string="Address" 
                	/>
                <div class="o_row invoice_row">
                    <field  name="vendor_address_id" context="{'show_address_only': True,'address_inline':True}" 
                    options='{"always_reload": True}'/>
                </div>
                
        		<field name="phone"/>
        		<field name="email"/>
        	</xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <label for="partner_address_id" string="Ship To Address" 
                	attrs="{'invisible': [('default_location_dest_id_usage', '=', 'customer')]}"/>
                <div class="o_row invoice_row">
                    <field  name="partner_address_id" context="{'show_address_only': True,'address_inline':True}" 
                    attrs="{'invisible': [('default_location_dest_id_usage', '=', 'customer')],}"
                    domain="['|',('id', '=', partner_id), ('parent_id', '=', partner_id)]"
                    options='{"always_reload": True}'/>
                </div>
                <label for="dest_address_id" string="Ship To Address" attrs="{'invisible': [('default_location_dest_id_usage', '!=', 'customer')]}"/>
                <div class="o_row invoice_row">
                    <field name="dest_address_id" groups="stock.group_stock_multi_locations" context="{ 'show_address_only': True,'address_inline':True}" attrs="{'invisible': [('default_location_dest_id_usage', '!=', 'customer')], 'required': [('default_location_dest_id_usage', '=', 'customer')]}" options='{"always_reload": True}'/>
                </div>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="add_to_buy"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="purchase_shipping_method_id"/>
                <field name="is_note_line" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='notes']" position="before">
                <group string="Process Qty" attrs="{'invisible': [('split_line', '=', False)]}" name="process_qty" colspan="4">
                    <field name="split_line" nolabel="1" readonly="1" widget="section_and_note_one2many" mode="tree" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}">
                                <tree string="Purchase Order Split Lines" editable="bottom">
                                    <field name="display_type" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="product_type" invisible="1"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="invoice_lines" invisible="1"/>
                                    <field name="sequence" widget="handle" invisible="1"/>
                                    <field name="sequence_ref" readonly="1" force_save="1" width="0.2"/>
                                    <field name="line_split" invisible="1"/>
                                    <field name="product_id" attrs="{'readonly': [('state', 'in', ('purchase', 'to approve','done','cancel'))], 'required': [('display_type', '=', False)]}" context="{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id}" force_save="1" domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" invisible="1"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="sale_line_id" invisible="0"/>
                                    <button type="object" class="fa fa-arrow-right oe_link" name="show_so" string="View SO" />
                                    <field name="date_planned" optional="hide" attrs="{'required': [('display_type', '=', False)], 'readonly': [('parent.date_planned', '!=', False)]}" invisible="1"/>
                                    <field name="account_analytic_id" optional="hide" context="{'default_partner_id':parent.partner_id}" groups="analytic.group_analytic_accounting" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" invisible="1"/>
                                    <field name="analytic_tag_ids" optional="hide" groups="analytic.group_analytic_tags" widget="many2many_tags" options="{'color_field': 'color'}" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" invisible="1"/>
                                    <field name="product_qty"/>
                                    <field name="create_uid" string="Initially Added By" optional="hide"/>
                                    <field name="write_uid" string="Modified By" optional="hide"/>
                                    <field name="create_date" optional="hide"/>
                                    <field name="write_date"  optional="hide"/>
                                    <field name="qty_received_manual" invisible="1"/>
                                    <field name="qty_received_method" invisible="1"/>
                                    <!-- attrs="{'column_invisible': [('parent.state', 'not in', ('purchase', 'done'))], 'readonly': [('qty_received_method', '!=', 'manual')]}" -->
                                    <field name="qty_received" string="Received" invisible="1"/>
                                    <!-- attrs="{'column_invisible': [('parent.state', 'not in', ('purchase', 'done'))]}" -->
                                    <field name="qty_invoiced" string="Billed" invisible="1"/>

                                    <field name="product_uom" string="UoM" groups="uom.group_uom" attrs="{                                             'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))],                                             'required': [('display_type', '=', False)]                                         }" force_save="1" optional="show"/>
                                    <field name="price_unit" attrs="{'readonly': [('invoice_lines', '!=', [])]}" invisible="1"/>
                                    <field name="taxes_id" widget="many2many_tags" domain="[('type_tax_use','=','purchase'), ('company_id', '=', parent.company_id)]" context="{'default_type_tax_use': 'purchase', 'search_view_ref': 'account.account_tax_view_search'}" options="{'no_create': True}" optional="show" invisible="1"/>
                                    <field name="price_subtotal" widget="monetary" invisible="1"/>
                                    <button name="change_sol_qty" class="oe_edit_only oe_highlight" string="Allocate" type="object"/>
                                    <button name="action_cancel_pol" type="object" class="fa fa-trash-o oe_edit_only" aria-label="Delete row 1" context="{'purchase_split_line':True}" confirm="Are you sure you want to delete this record?"/>
                                </tree>
                            </field>
                </group>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="replace">
                <field name="sequence_ref" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="item_note" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="allocated_qty" string="Allocated Qty"/>
                <field name="invetory_qty" string="Invetory Qty"/>
                <field name="create_uid" string="Initially Added By" optional="hide"/>
                <field name="write_uid" string="Modified By" optional="hide"/>
                <field name="create_date" optional="hide"/>
                <field name="write_date"  optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='incoterm_id']" position="after">
                <field name="fob"/>
            </xpath>

            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page name="vendor_partinent_info" string="Vendor/Distributor Pertinent Info">
                    <group>
                        <group>
                            <field name="phone_number"/>
                            <field name="dropship_selection" widget="radio" options="{'horizontal': true}"/>
                            <field name="dropship_fee"/>
                            <field name="order_min"/>
                            <field name="below_min_fee"/>
                        </group>
                        <group>
                            <field name="free_freight_level"/>
                            <field name="ships_from"/>
                            <field name="ship_cutoff_time"/>
                            <field name="note" string="Notes"/>
                        </group>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>

	<record id="purchase_order_tree_inherit" model="ir.ui.view">
		<field name="name">purchase.order.tree</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='state']" position="after">
				<field name="address_mismatch"/>
				<field name="avs_cvv_flag"/>
			</xpath>
		</field>
	</record>
		
	<record id="purchase.purchase_rfq" model="ir.actions.act_window">
	    <field name="name">Open POs</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">purchase.order</field>
	    <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
	    <field name="view_id" ref="purchase.purchase_order_tree"/>
	    <field name="domain">[]</field>
	    <field name="context">{}</field>
	    <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
	    <field name="context">{'quotation_only': True}</field>
	    <field name="help" type="html">
	      <p class="o_view_nocontent_smiling_face">
	        Create a request for quotation
	      </p><p>
	        The quotation contains the history of the discussion
	        you had with your vendor.
	      </p>
	    </field>
	</record>

	<menuitem action="purchase.purchase_rfq" id="purchase.menu_purchase_rfq"
            parent="purchase.menu_procurement_management"
            name="Open POs"
            sequence="0"/>
                    
