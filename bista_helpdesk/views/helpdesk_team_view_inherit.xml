<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_helpdesk_inherited">
            <field name="name">helpdesk.form.inherited</field>
            <field name="model">helpdesk.team</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_team_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='self-Service']" position="after">
                    <h2>Quotation</h2>
                    <div class="row mt16 o_settings_container" id="new-quotation">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="creat_quot_helpdesk"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="creat_quot_helpdesk"/>
                                <div class="text-muted">
                                    Create New Quotation from tickets
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
