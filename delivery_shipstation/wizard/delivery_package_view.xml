<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Add delivery package referance view -->
    <record id="delivery_package_ref_view_form" model="ir.ui.view">
        <field name="name">delivery.package.ref.form</field>
        <field name="model">delivery.package.ref</field>
        <field name="arch" type="xml">
            <form string="Package">
                <group>
                    <group string="Tracking Information">
                        <field name="name" invisible="1"/>
                        <field name="tracking_ref"/>
                        <field name="shipping_date"/>
                        <label for="shipping_weight"/>
                        <div class="o_row" name="Shipping Weight">
                            <field name="shipping_weight"/>
                        </div>
                    </group>
                    <group string="Shipping Information">
                        <field name="shipstation_carrier_id"/>
                        <field name="carrier_id"/>
                        <field name="ship_package_id"/>
                    </group>
                </group>
                <field name="product_line">
                    <tree editable="bottom" delete="0" create="false">
                        <field name="product_id" readonly="1" force_save="1"/>
                        <field name="product_uom_qty" readonly="1" force_save="1"/>
                        <field name="quantity_done"/>
                        <field name="move_line_id" invisible="1"/>
                    </tree>
                </field>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--  Add delivery package referance action -->
    <record id="delivery_package_ref_action" model="ir.actions.act_window">
        <field name="name">Delivery Package</field>
        <field name="res_model">delivery.package.ref</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="delivery_shipstation.delivery_package_ref_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
