<odoo>
    <template id="sale_order_portal_content_inherit_sale_stock_inherit_website_sale_delivery_shipping_detail" name="Shipping tracking on orders followup" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//section[@id='details']" position="after">
            <t t-if="sale_order.picking_line_ids">
                <h4 class="mt32">Shipping Detail</h4>
                <table class="table table-sm" id="sales_order_table">
                    <thead class="bg-100">
                        <tr>
                            <th class="text-left">Picking</th>
                            <th class="text-left">Product</th>
                            <th class="text-right">Cariier</th>
                            <th class="text-right">Shipping Service</th>
                            <th class="text-right">Package</th>
                            <th class="text-right">Tracking Ref</th>
                            <th class="text-right">Shipping Cost</th>
                            <th class="text-right">Date</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <tr t-foreach="sale_order.picking_line_ids" t-as="i">
                            <td><span t-field="i.move_id.picking_id.name"/></td>
                            <td><span t-field="i.product_id.default_code"/></td>
                            <td><span t-field="i.shipstation_carrier_id.name"/></td>
                            <td><span t-field="i.carrier_id.name"/></td>
                            <td><span t-field="i.result_package_id.name"/></td>
                            <td><span t-field="i.tracking_ref"/></td>
                            <td><span t-field="i.carrier_price"/></td>
                            <td><span t-field="i.shipping_date"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </xpath>
    </template>
</odoo>
