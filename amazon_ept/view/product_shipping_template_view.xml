<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="product_shipping_template_tree" model="ir.ui.view">
            <field name="name">amazon.product.shipping.template.tree</field>
            <field name="model">amazon.product.shipping.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="product_shipping_template_form" model="ir.ui.view">
	          <field name="name">amazon.product.shipping.template.form</field>
	            <field name="model">amazon.product.shipping.template</field>
	            <field name="arch" type="xml">
	                <form>  
	                	<sheet>
	                		<group>
	                			<group>
	         						<field name="name" required="1"/>
	         				</group>
	         				</group>
	         			</sheet>
	                </form>
	           </field>
        </record>
           
          <record id="action_product_shipping_template" model="ir.actions.act_window">
	            <field name="name">Shipping Template</field>
	            <field name="type">ir.actions.act_window</field>
	            <field name="res_model">amazon.product.shipping.template</field>
	            <field name="view_id" ref="product_shipping_template_tree"/>
	      </record>
	      
        <menuitem id="product_shipping_template_menu"
            name="Shipping Template"
            parent="amazon_ept.menu_configuration_ept"
            action="action_product_shipping_template" groups="amazon_ept.group_amazon_manager_ept"
            sequence="3"/>
	</data>
</odoo>